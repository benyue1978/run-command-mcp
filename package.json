{
  "name": "run-command-mcp",
  "module": "src/index.ts",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "命令行工具，用于运行 Model Context Protocol (MCP) 服务器",
  "private": false,
  "bin": {
    "run-command-mcp": "./bin/run-command-mcp.js"
  },
  "scripts": {
    "start": "npx ts-node src/index.ts",
    "build": "npx tsc src/index.ts --outDir build",
    "build:http": "npx tsc src/server/http-server.ts --outDir build",
    "dev": "npx nodemon --exec ts-node src/index.ts",
    "start:http": "npx ts-node src/server/http-server.ts",
    "dev:http": "npx nodemon --exec ts-node src/server/http-server.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "zod": "^3.24.2"
  }
}
